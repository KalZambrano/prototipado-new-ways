<style>
  /* Header */
  .header {
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #1e40af;
  }

  .user-profile {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .user-info h3 {
    font-size: 0.95rem;
    color: #1f2937;
    margin-bottom: 0.2rem;
  }

  .user-info p {
    font-size: 0.85rem;
    color: #6b7280;
  }

  /* Main Content */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .welcome-section {
    margin-bottom: 3rem;
  }

  .welcome-section h1 {
    font-size: 2rem;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .welcome-section p {
    color: #6b7280;
    font-size: 1.1rem;
  }

  /* Dashboard Grid */
  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  /* Card Styles */
  .card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  /* Schedule Card */
  .schedule-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
  }

  .card-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
  }

  .schedule-card .card-icon {
    background: rgba(255, 255, 255, 0.2);
  }

  .card-title {
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
  }

  .card-title-2 {
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    color: black;
  }

  .card-description {
    font-size: 0.95rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .card-description-2 {
    font-size: 0.95rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    line-height: 1.5;
    color: black;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-white {
    background: white;
    color: #667eea;
  }

  .btn-white:hover {
    background: #f9fafb;
    transform: scale(1.05);
  }

  /* Level Card */
  .level-card .card-icon {
    background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  }

  .level-badge {
    display: inline-block;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .level-details {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .container {
      padding: 2rem 1rem;
    }

    .welcome-section h1 {
      font-size: 1.5rem;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
